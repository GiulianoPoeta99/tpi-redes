{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check .",
    "format": "biome check --write .",
    "test": "vitest",
    "preview": "vite preview",
    "compile:electron": "tsc -p electron/tsconfig.json && npx esbuild electron/preload.ts --bundle --platform=node --outfile=dist-electron/preload.cjs --external:electron",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "dev:electron": "npm run compile:electron && concurrently -k \"npm run dev\" \"npm run electron\""
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.560.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-virtuoso": "^4.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}
