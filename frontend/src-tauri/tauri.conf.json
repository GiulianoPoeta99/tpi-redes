{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "File Transfer App",
  "version": "0.1.0",
  "identifier": "com.filetransfer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "File Transfer App",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.filetransfer.app",
    "publisher": "File Transfer Team",
    "category": "Utility",
    "shortDescription": "Socket-based file transfer application",
    "longDescription": "A cross-platform file transfer application supporting TCP and UDP protocols with integrity verification and real-time progress monitoring.",
    "copyright": "Copyright Â© 2024 File Transfer Team. All rights reserved.",
    "licenseFile": "../../LICENSE",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0", "libayatana-appindicator3-1"]
      },
      "rpm": {
        "epoch": 0,
        "release": "1",
        "depends": ["webkit2gtk3", "gtk3", "libappindicator-gtk3"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "fs": {
      "readFile": true,
      "scope": ["**"]
    },
    "notification": {
      "all": true
    }
  }
}