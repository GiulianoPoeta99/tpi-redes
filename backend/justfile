# Backend File Transfer CLI - Modular Build and Development Workflows

# Import all modules
import 'just/dev.just'
import 'just/build.just'
import 'just/test.just'
import 'just/docker.just'
import 'just/lab.just'
import 'just/utils.just'

# Show all available commands
default:
    @just --list

# Quick setup: create files and build project
quick-start: create-test-files build
    @echo "Backend ready! Use 'just dev' to see CLI help"

# Quick development test workflow
quick-test: create-test-files build test-real
    @echo "Quick test complete!"